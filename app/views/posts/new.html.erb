<h1>New Post</h1>
<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>
<%= link_to "Back to Posts List", posts_path %>
